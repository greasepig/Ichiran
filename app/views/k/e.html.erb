<h3><%= translate(:application_name) %></h3>
<% form_tag(:action => :e) do %>
<%= text_field :entry, :expression %>

<%= submit_tag translate(:add) %>
<% end %>

<% for entry in @entries %>
    <div class="entry" id="entry_<%= entry.id %>">&gt; <%= entry.expression %> <%= link_to_remote translate(:delete), :url => {:action => :delete,
                     :id => entry.id},
                     :update => "entry_#{entry.id}" %></div>
<% end %> 

<%= link_to translate(:logout), :action => :logout %>
